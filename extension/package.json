{
  "name": "tarnished-extension",
  "version": "1.0.0",
  "description": "Browser extension for detecting and saving job listings to Tarnished",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite build --watch --mode development",
    "build": "vite build",
    "build:chrome": "vite build && cd dist && zip -r ../tarnished-chrome.zip .",
    "build:firefox": "vite build && cd dist && zip -r ../tarnished-firefox.zip .",
    "build:all": "yarn build:chrome && yarn build:firefox",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "dependencies": {
    "webextension-polyfill": "^0.12.0"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.268",
    "@types/webextension-polyfill": "^0.12.5",
    "prettier": "^3.5.1",
    "sharp": "^0.34.5",
    "typescript": "^5.4.0",
    "vite": "^5.4.0"
  }
}
